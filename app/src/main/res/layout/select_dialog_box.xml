<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="260dp"
    android:padding="15dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/colorPrimary">



    <Button
        android:id="@+id/dialog_reset_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset value to 0"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/main_button_drawable"
        android:padding="20dp"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Set a custom value:"/>


    <EditText
        android:id="@+id/zikr_custom_value"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:textColor="@color/colorPrimaryDark"
        android:padding="5dp"
        android:gravity="left"
        android:hint="enter a value #"
        android:textColorHint="#838181"
        android:inputType="number"
        android:minWidth="200dp"
        android:scrollbars="vertical" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/main_button_drawable"
            android:text="cancel"
            android:textColor="@color/colorPrimary" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/dialog_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/main_button_drawable"
            android:text="SET"
            android:textColor="@color/colorPrimary" />
    </RelativeLayout>

</LinearLayout>








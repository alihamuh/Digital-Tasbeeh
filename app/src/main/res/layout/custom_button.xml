<?xml version="1.0" encoding="utf-8"?>
<!--button 1-->
<LinearLayout
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:layout_gravity="center">

        <Button
            android:id="@+id/resetBtn"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/reset_button_drawable" />

    </LinearLayout>


    <LinearLayout
        style="@style/ButtonStyle2"
        android:layout_width="0dp"
        android:layout_weight="0.75">

        <TextView
            android:id="@+id/engBtn"
            style="@style/btnTxtViewStyle"

            android:text="@string/english_Zikr_1"
            />

        <com.alihamuh.ali.tasbeeh.Text_Formatter.FontText
            android:id="@+id/arbBtn"
            style="@style/arbBtnTxtViewStyle"
            android:text="@string/Zikr_1"
            custom:typefaceAsset="fonts/muhammadi.ttf"
            />
    </LinearLayout>

</LinearLayout>
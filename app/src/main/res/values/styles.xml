<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">@drawable/red_dark_background</item>
        <item name="mainNavigationColor">#130000</item>

        <item name="alertDialogTheme">
            @style/AppAlertDialogContent
        </item>
        <item name="preferenceTheme">
            @style/PreferenceTheme
        </item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">@drawable/red_dark_background</item>
        <item name="mainNavigationColor">#130000</item>
        <item name="alertDialogTheme">
            @style/AppAlertDialogContent
        </item>
        <item name="preferenceTheme">
            @style/PreferenceTheme
        </item>
    </style>


    <style name="StarAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">@drawable/starbackground</item>
        <item name="mainNavigationColor">#000000</item>
        <item name="alertDialogTheme">
            @style/AppAlertDialogContent
        </item>
        <item name="preferenceTheme">
            @style/PreferenceTheme
        </item>
    </style>

    <style name="GreenAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">@drawable/green</item>
        <item name="mainNavigationColor">#00190F</item>
        <item name="alertDialogTheme">
            @style/AppAlertDialogContent
        </item>
        <item name="preferenceTheme">
            @style/PreferenceTheme
        </item>
    </style>

    <style name="GrayAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">@drawable/grey</item>
        <item name="mainNavigationColor">#242323</item>
        <item name="alertDialogTheme">
            @style/AppAlertDialogContent
        </item>
        <item name="preferenceTheme">
            @style/PreferenceTheme
        </item>
    </style>

    <style name="BrownAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="mainBackground">@drawable/brown</item>
        <item name="mainNavigationColor">#110200</item>
        <item name="alertDialogTheme">
            @style/AppAlertDialogContent
        </item>
        <item name="preferenceTheme">
            @style/PreferenceTheme
        </item>
    </style>


    <style name="ButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:background">@drawable/main_button_drawable</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">25dp</item>


    </style>


    <!-- For converting Relative Layout to act like a Button-->
    <style name="ButtonStyle2" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/main_button_drawable</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- For the English TextViews inside the converted Layout-->
    <style name="btnTxtViewStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">26dp</item>
        <item name="android:paddingLeft">10dp</item>>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- For Arabic Text View inside the converted Layout-->
    <style name="arbBtnTxtViewStyle" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">29dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:focusable">true</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="StarAppTheme.NoActionBar" parent="StarAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GreenAppTheme.NoActionBar" parent="GreenAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GrayAppTheme.NoActionBar" parent="GrayAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BrownAppTheme.NoActionBar" parent="BrownAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="NavigationTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:background">?mainNavigationColor</item>
    </style>

    <style name="statsTheme" parent="AppTheme.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <!-- Base application theme. -->
    <style name="settingTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">
            @style/AppAlertDialogContent
        </item>
        <item name="preferenceTheme">
            @style/PreferenceTheme
        </item>
    </style>

    <style name="AppAlertDialogContent" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">#000</item>
        <!--item name="alertDialogTheme">
            @style/Theme.AppCompat.DayNight.Dialog.Alert
        </item-->

    </style>

    <style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorSecondary">#fff</item>
        <item name="android:colorAccent">#fff</item>
    </style>



    <!-- Style for an Preference Entry -->
    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <!-- Style for a DialogPreference Entry -->
    <style name="AppPreference.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

</resources>
